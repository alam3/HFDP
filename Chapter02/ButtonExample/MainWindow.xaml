<Window x:Class="ButtonExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid>
        <TextBox Name="textbox" Margin="60,50,60,300" BorderBrush="Black" BorderThickness="1"/>
        <Button Name="devilButton" Margin="60,120,60,210" BorderBrush="Black" BorderThickness="1"
                Click="DevilClick" ClickMode="Press">
            Ask Devil
        </Button>
        <Button Name="angelButton" Margin="60,210,60,120" BorderBrush="Black" BorderThickness="1"
                Click="AngelClick" ClickMode="Press">
            Ask Angel
        </Button>
    </Grid>
</Window>
